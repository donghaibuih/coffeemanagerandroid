<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:layout_height="match_parent"
    tools:context=".MainForm">



    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/btn_MainOrder"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:srcCompat="@drawable/coffebanner" />

            <TextView
                android:id="@+id/textMainORder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="serif-monospace"

                android:text="ORDER" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/btn_MainEmployee"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/employeebanner" />

        <TextView
            android:id="@+id/textMaiEmployee"
            android:layout_width="match_parent"
            android:gravity="center"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="EMPLOYEE" />

    </LinearLayout>





    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/btnMainProduct"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/productbanner" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:gravity="center"
                android:fontFamily="serif-monospace"

                android:textStyle="bold"
                android:layout_height="wrap_content"

                android:text="PRODUCT" />

        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btnMainBill"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:adjustViewBounds="false"
            app:srcCompat="@drawable/billbanner" />

            <TextView
                android:id="@+id/textMainBill"
                android:layout_width="match_parent"
                android:fontFamily="serif-monospace"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:text="BILL" />

        </LinearLayout>







</LinearLayout>