<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"


    android:layout_height="match_parent"
    tools:context=".EmployeeManage">

<LinearLayout
    android:layout_width="wrap_content"
    android:orientation="horizontal"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:text="Name" />

    <EditText
        android:id="@+id/txt_employeeName"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:text="Adress" />

    <EditText
        android:id="@+id/txt_employeeAdress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />

    <TextView
        android:id="@+id/textView91"
        android:layout_width="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content"
        android:text="Account Name" />

    <EditText
        android:id="@+id/txt_accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="" />
</LinearLayout>




    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="Phone Number" />

        <EditText
            android:id="@+id/txt_employeePhoneNumber"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:text="" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="Position" />

        <EditText
            android:id="@+id/txt_employeePosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

        <TextView
            android:id="@+id/textView92"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"
            android:text="Account Name" />

        <EditText
            android:id="@+id/txt_accountPassWords"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword"
            android:text="" />
    </LinearLayout>





   <LinearLayout
       android:layout_width="wrap_content"
       android:orientation="horizontal"
       android:layout_height="wrap_content">

       <Button
           android:id="@+id/btn_createEmployee"
           android:layout_width="wrap_content"
           android:focusable="false"
           android:focusableInTouchMode="false"
           android:layout_height="wrap_content"
           android:text="Create" />

       <Button
           android:id="@+id/btn_deleteEmployee"
           android:layout_width="wrap_content"
           android:focusable="false"
           android:focusableInTouchMode="false"
           android:layout_height="wrap_content"
           android:text="Delete" />

       <Button
           android:id="@+id/btn_updateEmployee"
           android:layout_width="wrap_content"
           android:focusable="false"
           android:focusableInTouchMode="false"
           android:layout_height="wrap_content"
           android:text="Update" />



   </LinearLayout>
    <ListView
        android:id="@+id/listEmployee"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>